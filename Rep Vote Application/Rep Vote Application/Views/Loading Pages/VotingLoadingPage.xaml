<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rep_Vote_Application.Views.Loading_Pages.VotingLoadingPage"
             BackgroundColor="#BB2424"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#BB2424" VerticalOptions="Center">

            <ActivityIndicator Color="White" IsRunning="True" />
            <Label Text="Confirming vote" TextColor="White" HorizontalOptions="Center" x:Name="LoadingText"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>